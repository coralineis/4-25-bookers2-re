<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full.messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, class: 'form-control name'  %>
        </div>
        <div class="form-groupe">
          <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image", id: "user_profile_image" %>
        </div>
        <div class="form-groupe">
          <label for="user_introduction">Introduction</label><br>
          <%= f.text_area :introduction, class: "form-control introduction" %><br>
        </div>
        <div class="form-groupe">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>